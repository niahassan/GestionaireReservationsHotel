<base:BaseDialog x:Class="HotelManager.Gui.Dialog.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:base="clr-namespace:HotelManager.Gui.Dialog"
             mc:Ignorable="d"
             Loaded="BaseDialog_Loaded"
             WindowStyle="None" Width="340" Height="90">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Style/Resources.xaml"/>
                <ResourceDictionary Source="BaseDialogControl.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <base:BaseDialogControl>
        <base:BaseDialogControl.Content>
            <Grid Height="60">
                <TextBlock Name="Message" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource LabelBrush}">Message</TextBlock>
            </Grid>
        </base:BaseDialogControl.Content>
    </base:BaseDialogControl>
</base:BaseDialog>
