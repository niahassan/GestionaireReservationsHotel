<base:BaseFrameWithSearch x:Class="HotelManager.Gui.Rooms"
             x:TypeArguments="entity:Room"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:component="clr-namespace:HotelManager.Gui.Component"
             xmlns:entity="clr-namespace:HotelManager.Entity"
             xmlns:base="clr-namespace:HotelManager.Gui"
             Loaded="BaseFrame_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Resources.xaml"/>
                <ResourceDictionary Source="BaseFrameControl.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <base:BaseFrameControl>
        <base:BaseFrameControl.Left>
            <component:SearchBox x:Name="searchBox" Visibility="Hidden" Height="25" Width="200" Margin="30,60,0,0"></component:SearchBox>
        </base:BaseFrameControl.Left>
        <base:BaseFrameControl.Right>
            <Button x:Name="createButton" Click="createButton_Click" Visibility="Hidden" HorizontalAlignment="Right" Margin="30" Height="25" Width="120" Content="Ajouter une chambre" Style="{StaticResource ConfirmationButtonStyle}" />
        </base:BaseFrameControl.Right>
    </base:BaseFrameControl>
    
</base:BaseFrameWithSearch>
